<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter" _name="Quilter" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#1a1a1a" background="#F7F7F7"/>
  <style name="cursor"          foreground="#00C6FF"/>
  <style name="current-line"    background="#eff0f1"/>
  <style name="selection"       foreground="#1a1a1a" background="#00C6FF"/>
  <style name="search-match"    foreground="#1a1a1a" background="#EEAA00"/>

  <!-- Bold -->
  <style name="def:statement" bold="true"/>

  <!-- Italic -->
  <style name="def:doc-comment-element" foreground="#555" italic="true"/>

  <!-- Links -->
  <style name="def:comment" foreground="#00C6FF"/>
  <style name="def:underlined" foreground="#00C6FF"/>

  <!-- Code -->
  <style name="def:identifier" background="#F2F0F2" foreground="#1a1a1a"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#1a1a1a"/>

  <!-- Label -->
  <style name="def:preprocessor" foreground="#1a1a1a"/>

  <!-- Image marking in Links -->
  <style name="def:shebang" foreground="#00C6FF"/>
  <style name="def:constant" foreground="#00C6FF"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#B7B6B7"/>

  <!-- Headers -->
  <style name="def:type" foreground="#1a1a1a" bold="true"/>
</style-scheme>
